{{ attach_library(active_theme()~'/card') }}

{% if rows %}
<section class="L LW-4 pagewidth">

  {% for row in rows %}
    <article {{ row.attributes.addClass('card', 'w') }}>

      <h3 class="card__title card__title--icon card__title--icon-admin-structure-menu">
        {{ row.cells.title.content}}
      </h3>

      <p class="card__text">
        {{ row.cells.description.content['#markup']}}
      </p>

      <div class="card__operations">
        {{ row.cells.operations.content }}
      </div>

    </article>
  {% endfor %}
{% endif %}
