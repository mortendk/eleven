{{ attach_library(active_theme()~'/card') }}

{% if rows %}

{% include active_theme_path() ~ '/templates/component/navigation/cardlayout/cardlayout.html.twig' %}
<section{{ attributes.addClass('L','LW-4', 'LW--nooverflow', 'pagewidth', 'js-card-layout-target') }}>

  {% for row in rows %}
    <article {{ row.attributes.addClass('card', 'w') }}>

      <h3 class="card__title card__title--icon card__title--icon-paragraphs">
        {{ row.cells.label.content}}
      </h3>

      <p class="card__text">

      </p>

      <div class="card__operations">
        {{ row.cells.operations.content }}
      </div>

    </article>
  {% endfor %}
{% endif %}
