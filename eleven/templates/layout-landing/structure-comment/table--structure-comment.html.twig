{{ attach_library(active_theme()~'/card') }}

{% if rows %}
<section class="L LW-third pagewidth">
  {% for row in rows %}
  <article {{ row.attributes.addClass('w','card') }}>

      <h3 class="card__title card__title--icon card__title--icon-comment">{{ row.cells.type.content}}</h3>

      <p class="card__text">
        {{ row.cells.description.content['#markup']}}
      </p>

      <div class="card__operations">
        {{ row.cells.operations.content }}
      </div>

    </article>
  {% endfor %}
{% endif %}
